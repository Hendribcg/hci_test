<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <ImageView android:layout_width="@dimen/grid_icon_size"
               android:layout_height="@dimen/grid_icon_size"
               android:id="@+id/image_grid_item"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/text_grid_item"
              app:layout_constraintTop_toBottomOf="@id/image_grid_item"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              android:gravity="center"
              tools:text="Testtttttttttt"
              android:paddingLeft="@dimen/horizontal_margin_padding"
              android:paddingRight="@dimen/horizontal_margin_padding"
    />
</androidx.constraintlayout.widget.ConstraintLayout>